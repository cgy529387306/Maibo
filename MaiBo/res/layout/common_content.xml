<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/global_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment" >

    <LinearLayout
        android:id="@+id/lin_global_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminate="false"
            android:indeterminateDrawable="@drawable/bg_loading_progress" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="@string/label_global_view_hint"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_global_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txv_global_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="16dp"
            android:drawableTop="@drawable/ic_loading_error"
            android:gravity="center"
            android:text="@string/label_global_view_error"
            android:textColor="@color/gray_dark"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_global_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/txv_global_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/label_global_view_empty"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>
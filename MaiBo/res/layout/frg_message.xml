<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_custom_actionbar" >

        <TextView
            android:id="@+id/txv_actionbar_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="消息"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="发起聊天"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_msg_atme"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_list_top_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_message_at"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text=" @我的"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_arrow" />
        
         <TextView
            android:id="@+id/txv_atme_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imv_arrow"
            android:background="@drawable/main_badge"
            android:gravity="center"
            android:visibility="gone"
            android:text="44"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_msg_discuze"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_list_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_message_comment"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text=" 评论"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imv_arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_arrow" />
        
         <TextView
            android:id="@+id/txv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imv_arrow1"
            android:background="@drawable/main_badge"
            android:gravity="center"
             android:visibility="gone"
            android:text="44"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_msg_praise"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/btn_list_bottom_border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_message_good"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text=" 赞"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imv_arrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/common_icon_arrow" />
        
         <TextView
            android:id="@+id/txv_praise_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imv_arrow2"
            android:background="@drawable/main_badge"
            android:gravity="center"
            android:visibility="gone"
            android:text="44"
            android:textColor="@color/white"
            android:textSize="10sp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </FrameLayout>

</LinearLayout>
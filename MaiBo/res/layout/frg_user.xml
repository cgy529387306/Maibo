<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rel_actionbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_custom_actionbar" >

        <TextView
            android:id="@+id/txv_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_actionbar_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:gravity="center"
            android:text="设置"
            android:textColor="@drawable/btn_text_gray_orange"
            android:textSize="@dimen/common_text"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frl_user_block"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_fragment"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的手机"
            android:textSize="@dimen/common_text_small" />

        <TextView
            android:id="@+id/txv_user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="18050480850"
            android:textSize="@dimen/common_text_small" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="会收到一条含有验证码的短信"
        android:textSize="@dimen/common_text_small" />

    <com.mb.android.widget.ClearableEditText
        android:id="@+id/edt_user_vercode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_list_bottom_border_normal"
        android:hint="请输入验证码"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_user_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_orange"
        android:text="确认"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/common_text" />

    <Button
        android:id="@+id/btn_user_vercode"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/btn_orange"
        android:text="重新发送验证码（60s）"
        android:textColor="@color/gray_light"
        android:textSize="@dimen/common_text" />
   

</LinearLayout>
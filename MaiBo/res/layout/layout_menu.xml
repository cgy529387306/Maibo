<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000" >

    <LinearLayout
        android:id="@+id/lin_user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lin_menu"
        android:orientation="horizontal" >

        <com.mb.android.widget.CircleImageView
            android:id="@+id/imv_user_avater"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_avatar_default"
            app:border_color="@color/transparent"
            app:border_width="0.0dp" />

        <TextView
            android:id="@+id/txv_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="最美的不是下雨天，而是与你躲过雨的屋檐"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_large" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/lin_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line_theme_night" />

        <TextView
            android:id="@+id/txv_user_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:drawableLeft="@drawable/ic_menu_dot"
            android:drawablePadding="10dp"
            android:text="最美的不是下雨天，而是与你躲过雨的屋檐"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/common_text" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line_theme_night" />

        <RelativeLayout
            android:id="@+id/menu_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txv_menu_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_account"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="账号管理"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_notify"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="获取新消息"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_privacy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_safe"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="隐私与安全"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_common_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_setting"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="通用设置"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_common_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line_theme_night"/>

        <RelativeLayout
            android:id="@+id/menu_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_clear"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="清理缓存"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_feedback"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="意见反馈"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/menu_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_menu_about"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="关于脉搏"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/common_text_large" />

            <ImageView
                android:id="@+id/imv_arrow_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_menu_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" >

        <TextView
            android:id="@+id/menu_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_menu_setting_bottom_light"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/common_text_large" />

        <View
            android:id="@+id/view4"
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/line_theme_night" />

        <TextView
            android:id="@+id/menu_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/ic_menu_night"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="夜间"
            android:textColor="@color/gray_light"
            android:textSize="@dimen/common_text_large" />
    </LinearLayout>

</RelativeLayout>